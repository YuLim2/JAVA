package ch13;

public class Book {

	private static int number=100;
	
	private String name;
	private String author;
	private int bookNumber;
	
	public Book(String name, String author) {
		this.name = name;
		this.author = author;
		bookNumber = number;
		number++;
	}
	
	public void showInfo() {
		System.out.println("책 이름: " + name + (", 저자: ") + author + (", 책 번호: ") + bookNumber);
	}
}
